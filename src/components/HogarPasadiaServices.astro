---
import HogarPasadiaCard from "./HogarPasadiaCard.astro";
---

<section
  class='landing-section bg-white h-screen w-screen text-center overflow-hidden relative'
>
  <div class='z-30 relative h-full flex flex-col'>
    <header>
      <div class='flex flex-wrap justify-center items-center pt-48'>
        <HogarPasadiaCard />
      </div>
    </header>

    <footer class='flex flex-col flex-grow justify-end pb-12'>
      <div class='flex flex-wrap justify-center items-center'>
        <a
          class='text-gray-900 min-w-64 bg-gray-100 hover:bg-gray-200 font-medium rounded-md text-sm px-5 py-2.5 text-center justify-center inline-flex items-center dark:focus:ring-gray-500 me-2 mb-2'
          href='#'
        >
          Visítanos
        </a>

        <a
          class='text-white min-w-64 bg-black/70 hover:bg-black/90 font-medium rounded-md text-sm px-5 py-2.5 text-center justify-center inline-flex items-center dark:focus:ring-gray-500 me-2 mb-2 gap-x-1'
          href='#'
        >
          <svg
            xmlns='http://www.w3.org/2000/svg'
            class='icon icon-tabler icon-tabler-brand-whatsapp'
            width='20'
            height='20'
            viewBox='0 0 24 24'
            stroke-width='2'
            stroke='currentColor'
            fill='none'
            stroke-linecap='round'
            stroke-linejoin='round'
          >
            <path stroke='none' d='M0 0h24v24H0z' fill='none'></path>
            <path d='M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9'></path>
            <path
              d='M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1'
            ></path>
          </svg>
          Escríbenos
        </a>
      </div>
    </footer>
  </div>

  <div class='absolute top-0 bottom-0 h-full w-full z-10'>
    <video
      class='object-cover h-full w-full'
      autoplay
      muted
      loop
      src='/pasadiaVideo.webm'
      style='filter: contrast(100%) brightness(80%);'
    >
    </video>
  </div>
</section>
