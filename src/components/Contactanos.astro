---
import HogarTemporalCard from "./HogarTemporalCard.astro";
---

<section
  class="landing-section bg-white h-screen w-screen text-center overflow-hidden relative"
>
  <div class="z-30 relative h-full flex flex-col">
    <header>
      <div class="flex flex-wrap justify-center items-center pt-48 p-8">
        <div
          class="w-full max-w-md p-8 bg-white/60 backdrop-blur-sm rounded-lg shadow-lg"
        >
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Contáctanos</h2>
          <form class="space-y-4">
            <div>
              <label
                for="name"
                class="block text-sm font-medium text-gray-700 text-left"
                >Nombre</label
              >
              <input
                type="text"
                id="name"
                name="name"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500 sm:text-sm p-2"
                required
              />
            </div>
            <div>
              <label
                for="email"
                class="block text-sm font-medium text-gray-700 text-left"
                >Email</label
              >
              <input
                type="email"
                id="email"
                name="email"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500 sm:text-sm p-2"
                required
              />
            </div>
            <div>
              <label
                for="phone"
                class="block text-sm font-medium text-gray-700 text-left"
                >Teléfono</label
              >
              <input
                type="tel"
                id="phone"
                name="phone"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500 sm:text-sm p-2"
              />
            </div>
            <div>
              <label
                for="message"
                class="block text-sm font-medium text-gray-700 text-left"
                >Mensaje</label
              >
              <textarea
                id="message"
                name="message"
                rows="4"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500 sm:text-sm p-2"
                required></textarea>
            </div>
            <button
              type="submit"
              class="w-full bg-black/70 hover:bg-black/90 text-white font-medium rounded-md py-2.5 text-sm"
            >
              Enviar mensaje
            </button>
          </form>
        </div>
      </div>
    </header>
  </div>

  <div class="absolute top-0 bottom-0 h-full w-full z-10">
    <img
      class="object-cover h-full w-full"
      src="/calling.avif"
      style="filter: contrast(100%) brightness(80%);"
    />
  </div>
</section>
